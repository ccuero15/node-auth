{
  "compilerOptions": {
    /* Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* MÃ³dulos */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    /* Tipos y compatibilidad */
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Calidad */
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    /* Alias modernos */
    "paths": {
      "@config/*": ["./src/config/*"],
      "@domain/*": ["./src/domain/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@presentation/*": ["./src/presentation/*"],
      /* "@server/*": ["./src/server/*"],
      "@utils/*": ["./src/utils/*"] */
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}